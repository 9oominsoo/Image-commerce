<!DOCTYPE html>
<html>
  <head>
    <title>ImageCommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header class="navbar navbar-expand-lg navbar-fixed-top myNavbar">
      <div class="container">
        <a class="navbar-brand navbarLogo" href="/">ChocoCluster</a>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link navbarText" href="/main/mypage">Mypage</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbarText" href="/">Show Image</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbarText" href="/image_items/new">Upload Image</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbarText" href="/charge">Charge Chocomush</a>
          </li>
          <% if current_user %>
            <li class="nav-item">
              <a class="nav-link navbarText" href="/users/sign_out" data-method="DELETE">Logout</a>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link navbarText" href="/users/sign_in">Login</a>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
    <div class="container flashContent">
      <% flash.each do |type, message| %>
        <% if type == "success" %>
          <div class="alert alert-success">
        <% else %>
          <div class="alert alert-danger">
        <% end %>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= message %>
          </div>
      <% end %>
    </div>
    <div class="bodyContent">
      <%= yield %>
    </div>
    <script src="https://use.fontawesome.com/releases/v5.2.0/js/all.js"></script>

  </body>
</html>
