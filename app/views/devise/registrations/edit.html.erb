<div class="container">
  <div class="row ">
    <div class="card col-md-6 offset-md-3 p-5 mt-5" style="border:2px solid warning;">
      <div class="panel-body">
        <div class="mar-ver pad-btm">
          <h1 class="h3">회원정보 수정</h1>
          <hr>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="form-group">
            <dt><%= f.label :email %><br/></dt>
            <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <div class="form-group">
            <dt><%= f.label :"변경할 비밀번호(미입력시 변경안됨)" %><br/></dt>
            <%= f.password_field :password, class: "form-control",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
          </div>
          <div class="form-group">
            <dt><%= f.label :"비밀번호 재입력" %><br/></dt>
            <%= f.password_field :password_confirmation, class: "form-control",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
          </div>
          <div class="form-group">
            <dt><%= f.label :"본인 확인(비밀번호 입력)" %><br/></dt>
            <%= f.password_field :current_password, class: "form-control",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          </div>
          <div class="form-actions">
            <%= f.submit "수정 완료", class: 'btn btn-primary btn-block' %>
          </div><hr/>
        <% end %>
        <%= link_to "회원 탈퇴", registration_path(resource_name), class: 'btn btn-light btn-block', data: { confirm: "Are you sure?" }, method: :delete %>
        <%= link_to "뒤로가기", :back, class: 'btn btn-light btn-block'%>
</div>
</div>
</div>
</div>