<div class="row">
  <% @image_item.each do |item| %>
    <div class="col-md-4 item_data">
      <div class="card">
        <div class="thumbnail">
          <h1 class="a" style="text-align:center;">
            <% if item.repimg %>
              <%= image_tag item.repimg.url ,style: 'width: 320px; height: 300px;' unless item.repimg.url.nil? %>
            <% else %>
              <i class="fas fa-camera-retro fa-border fa-3x fa-fw" style="font-size:250px;" aria-hidden="true"></i>
            <% end %>
          </h1>
        </div>
        <div class="card-body">
          <h5 class="card-title" style="text-align:center;">
            <a href="/items/<%= item.id %>"><%= item.title %></a><br/>(<%= item.price %>$)
          </h5>
          <hr/>
          <div style="text-align:center;">
              <a href="#" class="btn btn-primary" id="order_button" data-itemid="<%= item.id %>" data-itemtitle="<%= item.title %>" data-itemprice="<%= item.price %>">구매하기</a>
              <%= link_to "상세정보 보기",  image_item_path(item.id), method: "get", class: "btn btn-primary", id: "showItem" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div><br/<br/>
<div class="col-sm-7" style="text-align: center;">
  <ul class="pagination">
    <%= paginate @image_item %>
  </ul>
</div>
